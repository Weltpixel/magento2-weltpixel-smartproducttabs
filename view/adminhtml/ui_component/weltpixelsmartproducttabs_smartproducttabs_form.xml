<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">weltpixelsmartproducttabs_smartproducttabs_form.smartproducttabs_form_data_source</item>
            <item name="deps" xsi:type="string">weltpixelsmartproducttabs_smartproducttabs_form.smartproducttabs_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Smart Product Tab Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">weltpixelsmartproducttabs_smartproducttabs_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">WeltPixel\SmartProductTabs\Block\Adminhtml\SmartProductTabs\Edit\BackButton</item>
            <item name="delete" xsi:type="string">WeltPixel\SmartProductTabs\Block\Adminhtml\SmartProductTabs\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">WeltPixel\SmartProductTabs\Block\Adminhtml\SmartProductTabs\Edit\ResetButton</item>
            <item name="save" xsi:type="string">WeltPixel\SmartProductTabs\Block\Adminhtml\SmartProductTabs\Edit\SaveButton</item>
            <item name="save_and_continue" xsi:type="string">WeltPixel\SmartProductTabs\Block\Adminhtml\SmartProductTabs\Edit\SaveAndContinueButton</item>
        </item>
    </argument>
    <dataSource name="smartproducttabs_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">WeltPixel\SmartProductTabs\Model\SmartProductTabs\DataProvider</argument>
            <argument name="name" xsi:type="string">smartproducttabs_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="weltpixelsmartproducttabs/smartproducttabs/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">General</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">0</item>
            </item>
        </argument>
        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="dataScope" xsi:type="string">id</item>
                </item>
            </argument>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">5</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Insert a name for this Smart Tab.</item>
                </item>
            </argument>
        </field>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Title</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataScope" xsi:type="string">title</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Insert a custom Title for this Smart Tab. This Title is displayed on the frontend.</item>
                </item>
            </argument>
        </field>
        <field name="display_label">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\SmartProductTabs\Model\SmartProductTabs\Attribute\Source\YesNo</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Display Label</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">WeltPixel_SmartProductTabs/js/components/displaylabelselect-component</item>
                    <item name="elementTmpl" xsi:type="string">WeltPixel_SmartProductTabs/form/element/displaylabelselect</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">12</item>
                    <item name="dataScope" xsi:type="string">display_label</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="label_text">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Label Text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">15</item>
                    <item name="dataScope" xsi:type="string">label_text</item>
                    <item name="notice" xsi:type="string" translate="true">Set the custom text you'd like to display on the Tab Label. Leave this option empty if you want to display the attribute value from the setting below.</item>
                </item>
            </argument>
        </field>
        <field name="label_attribute">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\SmartProductTabs\Model\SmartProductTabs\Attribute\Source\ProductAttribute</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Label Attribute</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">18</item>
                    <item name="dataScope" xsi:type="string">label_attribute</item>
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
        </field>
        <field name="label_font_size">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Label Font Size</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">label_font_size</item>
                    <item name="notice" xsi:type="string" translate="true">Set Font Size for the label. Example: 12px</item>
                </item>
            </argument>
        </field>
        <field name="label_font_color">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Label Font Color</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">21</item>
                    <item name="dataScope" xsi:type="string">label_font_color</item>
                    <item name="elementTmpl" xsi:type="string">WeltPixel_SmartProductTabs/form/element/colorinput</item>
                    <item name="notice" xsi:type="string" translate="true">Select Font Color for the label.</item>
                </item>
            </argument>
        </field>
        <field name="label_bg_color">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Label Background Color</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">24</item>
                    <item name="dataScope" xsi:type="string">label_bg_color</item>
                    <item name="elementTmpl" xsi:type="string">WeltPixel_SmartProductTabs/form/element/colorinput</item>
                    <item name="notice" xsi:type="string" translate="true">Select Background Color for the label.</item>
                </item>
            </argument>
        </field>
        <field name="label_bg_border_radius">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Label Background Border Radius</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">26</item>
                    <item name="dataScope" xsi:type="string">label_bg_border_radius</item>
                    <item name="notice" xsi:type="string" translate="true">Set Label Background Border Radius for the label. Example: 8px</item>
                </item>
            </argument>
        </field>
        <field name="label_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Label Padding</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">27</item>
                    <item name="dataScope" xsi:type="string">label_padding</item>
                    <item name="notice" xsi:type="string" translate="true">Set Padding for the label. Example: 10px</item>
                </item>
            </argument>
        </field>
        <field name="position">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Position</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataScope" xsi:type="string">position</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Insert a custom position for this Smart Tab. Note: Default Magento tabs have 10, 20 and 30 as position values. You can insert your Smart Tab in front of Magento tabs by inserting a number lower than 10. Use numbers between 10-30 to insert it between, or higher than 30 to insert it after all default Magento tabs.</item>
                </item>
            </argument>
        </field>
        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\SmartProductTabs\Model\SmartProductTabs\Attribute\Source\Status</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">45</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="storeviews">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\SmartProductTabs\Model\SmartProductTabs\Attribute\Source\StoreViews</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="dataScope" xsi:type="string">store_id</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="customer_group">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Customer\Ui\Component\Listing\Column\Group\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Customer Group</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="dataScope" xsi:type="string">customer_group</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <htmlContent name="html_content">
            <argument name="block" xsi:type="object">WeltPixel\SmartProductTabs\Block\Adminhtml\System\Config\DependeciesJsTemplate</argument>
        </htmlContent>
    </fieldset>
    <fieldset name="content">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Content</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">30</item>
            </item>
        </argument>
        <field name="content" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">100px</item>
                        <item name="add_variables" xsi:type="boolean">true</item>
                        <item name="add_widgets" xsi:type="boolean">true</item>
                        <item name="add_images" xsi:type="boolean">true</item>
                        <item name="add_directives" xsi:type="boolean">true</item>
                    </item>
                    <item name="source" xsi:type="string">smartproducttabs</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label>Content</label>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <rows>8</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="conditions">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Conditions</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">60</item>
            </item>
        </argument>
        <container name="weltpixel_smartproducttabs_edit_tab_conditions" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
            <htmlContent name="weltpixel_smartproducttabs_edit_tab_conditions">
                <argument name="block" xsi:type="object">WeltPixel\SmartProductTabs\Block\Adminhtml\SmartProductTabs\Edit\Tab\Conditions</argument>
                <argument name="name" xsi:type="string">weltpixel_smartproducttabs_edit_tab</argument>
            </htmlContent>
        </container>
    </fieldset>
</form>
